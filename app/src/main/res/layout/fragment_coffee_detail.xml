<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.CoffeeDetailFragment"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/detailsTitle"
                    android:layout_width="50dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="170dp"
                    android:text="Details"
                    android:textAppearance="@style/title"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/detailsCartButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignLeft="@id/detailsTitle"
                    android:layout_marginLeft="117dp"
                    android:layout_marginRight="25dp"

                    android:src="@drawable/cart_icon">

                </ImageView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="325dp"
                android:layout_height="146dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="100dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="#F7F8FB">

                <ImageView
                    android:id="@+id/coffee_image"
                    android:layout_width="172dp"
                    android:layout_height="128dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="76dp"
                    android:layout_marginTop="9dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/americano" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="283dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/coffee_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="Coffee Name"
                    android:textStyle="bold"
                    android:layout_gravity="center">

                </TextView>

                <LinearLayout
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="150dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/decreaseButton"
                        android:layout_width="24dp"
                        android:layout_height="20dp"
                        android:src="@drawable/remove_icon"
                        />

                    <TextView
                        android:id="@+id/quantityText"
                        android:layout_width="24dp"
                        android:layout_height="20dp"
                        android:text="1"
                        android:gravity="center"
                        />

                    <ImageView
                        android:id="@+id/increaseButton"
                        android:layout_width="24dp"
                        android:layout_height="20dp"
                        android:src="@drawable/add_icon"/>
                </LinearLayout>



            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="311dp"
                android:layout_height="1dp"
                android:layout_marginTop="343dp"
                android:layout_marginLeft="40dp"></com.google.android.material.divider.MaterialDivider>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="353dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="Shot"
                    android:textStyle="bold"
                    android:layout_gravity="center">

                </TextView>

                <CheckBox
                    android:id="@+id/singleShotCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:text="Single" />

                <CheckBox
                    android:id="@+id/doubleShotCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Double" />

            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="311dp"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="413dp"></com.google.android.material.divider.MaterialDivider>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="423dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="Select"
                    android:textStyle="bold"
                    android:layout_gravity="center">

                </TextView>

                <CheckBox
                    android:id="@+id/takeAwayCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:text="Take Away" />

            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="311dp"
                android:layout_height="1dp"
                android:layout_marginTop="483dp"
                android:layout_marginLeft="40dp"></com.google.android.material.divider.MaterialDivider>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="493dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="Size"
                    android:textStyle="bold"
                    android:layout_gravity="center">

                </TextView>

                <ImageView
                    android:id="@+id/small_select"
                    android:layout_width="17dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="120dp"
                    android:contentDescription="small_size"
                    android:src="@drawable/coffee_detail_size_normal_cup"
                    tools:ignore="TouchTargetSizeCheck">

                </ImageView>

                <ImageView
                    android:id="@+id/medium_select"
                    android:layout_width="24dp"
                    android:layout_height="31dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:contentDescription="medium_size"
                    android:src="@drawable/coffee_detail_size_selected_cup"
                    tools:ignore="TouchTargetSizeCheck">

                </ImageView>

                <ImageView
                    android:id="@+id/large_select"
                    android:layout_width="29dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:contentDescription="large_size"
                    android:src="@drawable/coffee_detail_size_normal_cup"
                    tools:ignore="TouchTargetSizeCheck">

                </ImageView>
                
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="311dp"
                android:layout_height="1dp"
                android:layout_marginTop="553dp"
                android:layout_marginLeft="40dp"></com.google.android.material.divider.MaterialDivider>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="563dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="Ice"
                    android:textStyle="bold"
                    android:layout_gravity="center">

                </TextView>

                <ImageView
                    android:id="@+id/less_ice_select"
                    android:layout_width="17dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="130dp"
                    android:contentDescription="small_size"
                    android:src="@drawable/less_ice_normal"
                    tools:ignore="TouchTargetSizeCheck">

                </ImageView>

                <ImageView
                    android:id="@+id/medium_ice_select"
                    android:layout_width="24dp"
                    android:layout_height="31dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:contentDescription="medium_size"
                    android:src="@drawable/normal_ice_normal"
                    tools:ignore="TouchTargetSizeCheck">

                </ImageView>

                <ImageView
                    android:id="@+id/much_ice_select"
                    android:layout_width="29dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:contentDescription="large_size"
                    android:src="@drawable/much_ice_selected"
                    tools:ignore="TouchTargetSizeCheck">

                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="650dp"
                >
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textStyle="bold"
                    android:layout_marginLeft="40dp"
                    android:textSize="22dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/totalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0"
                    android:textStyle="bold"
                    android:layout_marginLeft="75dp"
                    android:textSize="22dp"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/addToCartButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="Add to cart"
                    android:textStyle="bold"/>

            </LinearLayout>

        </RelativeLayout>
        
        
    </androidx.cardview.widget.CardView>

</LinearLayout>