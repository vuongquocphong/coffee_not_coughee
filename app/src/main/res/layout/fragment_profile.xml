<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/profileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="50dp"
        />

    <LinearLayout
        android:id="@+id/profileNameGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/profileTitle"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile_icon"
                android:layout_gravity="center"/>

            <LinearLayout
                android:id="@+id/profileNameGroupField"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/gray"/>

                <EditText
                    android:id="@+id/profileNameField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phong Vuong Quoc"
                    android:textSize="14dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/profileNameEditButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/edit"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/profilePhoneGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/profileNameGroup"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/phone_icon"
                android:layout_gravity="center"/>

            <LinearLayout
                android:id="@+id/profilePhoneGroupField"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textColor="@color/gray"/>

                <EditText
                    android:id="@+id/profilePhoneField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="012345789"
                    android:textSize="14dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/profilePhoneEditButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/edit"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/profileEmailGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/profilePhoneGroup"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/mail_icon"
                android:layout_gravity="center"/>

            <LinearLayout
                android:id="@+id/profileEmailGroupField"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="@color/gray"/>

                <EditText
                    android:id="@+id/profileEmailField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="vqphong21@apcs.fitus.edu.vn"
                    android:textSize="14dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/profileEmailEditButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/edit"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/profileEmailGroup"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile_icon"
                android:layout_gravity="center"/>

            <LinearLayout
                android:id="@+id/profileAddressGroupField"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="@color/gray"/>

                <EditText
                    android:id="@+id/profileAddressField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="123 Main Street, New York"
                    android:textSize="14dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/profileAddressEditButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/edit"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>