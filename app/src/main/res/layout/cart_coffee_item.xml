<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="327dp"
    android:layout_height="96dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="33dp"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="15dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/cartItemCoffeeImage"
            android:layout_width="82dp"
            android:layout_height="61dp"
            android:src="@drawable/americano"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp">
        </ImageView>

        <LinearLayout
            android:layout_width="152dp"
            android:layout_height="61dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/cartItemCoffeeName"
                android:layout_width="106dp"
                android:layout_height="18dp"
                android:text="Americano"
                android:textSize="12dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/cartItemCoffeeDetails"
                android:layout_width="152dp"
                android:layout_height="17dp"
                android:layout_marginTop="4dp"
                android:text="single | dine-in | medium | ice"
                android:textColor="#757575"
                android:textSize="10dp"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/cartItemCoffeeQuantity"
                android:layout_width="68dp"
                android:layout_height="18dp"
                android:layout_marginTop="4dp"
                android:text="x 1"
                android:textColor="#000000"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />
        </LinearLayout>
        
        <TextView
            android:id="@+id/cartItemCoffeeTotalPrice"
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="35dp"
            android:text="$3.00"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>